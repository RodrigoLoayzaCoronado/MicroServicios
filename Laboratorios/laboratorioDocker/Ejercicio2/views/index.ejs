<!DOCTYPE html>
<html>
<head>
    <title>Usuarios</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Lista de Usuarios</h1>
    <form action="/agregar" method="POST">
        <input type="text" name="nombre" placeholder="Nombre" required>
        <input type="email" name="correo" placeholder="Correo ElectrÃ³nico" required>
        <button type="submit">Agregar Usuario</button>
    </form>
    <table>
        <tr>
            <th>ID</th><th>Nombre</th><th>Correo</th><th>Fecha</th><th>Acciones</th>
        </tr>
        <% usuarios.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.nombre %></td>
                <td><%= user.correo %></td>
                <td><%= user.fecha_registro.toISOString().slice(0, 10) %></td>
                <td>
                    <form action="/eliminar/<%= user.id %>" method="POST">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
